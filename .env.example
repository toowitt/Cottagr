NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Cottagr
NEXT_PUBLIC_APP_URL=http://localhost:5000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cottagr_local
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
NEXT_PUBLIC_SUPABASE_EMAIL_REDIRECT_TO=http://localhost:5000/auth/callback

# Feature flags (Phase 3 scaffolding)
FEATURE_RLS=false
FEATURE_RATE_LIMITS=false
FEATURE_SIGNED_INVITES=false
INVITE_TOKEN_SECRET=

# Optional: configure Supabase SMTP for local email previews (e.g. with MailHog / Mailpit)
SUPABASE_SMTP_HOST=localhost
SUPABASE_SMTP_PORT=1025
SUPABASE_SMTP_USER=
SUPABASE_SMTP_PASS=
SUPABASE_SMTP_SENDER="Cottagr <no-reply@cottagr.local>"

# Optional: Resend email provider (set RESEND_API_KEY only if not using Supabase SMTP)
RESEND_API_KEY=
