{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "next build",
    "dev": "next dev --hostname 127.0.0.1 -p 4001",
    "dev:test": "ENABLE_TEST_AUTH=1 ENABLE_TEST_MAILBOX=1 NEXT_PUBLIC_ENABLE_TEST_AUTH=1 NEXT_PUBLIC_APP_URL=http://127.0.0.1:5000 NODE_ENV=test next dev --hostname 127.0.0.1 -p 5000",
    "dev:prepare": "prisma generate || true",
    "e2e:invites": "HOME=$PWD PLAYWRIGHT_SKIP_WEB_SERVER=1 ENABLE_TEST_AUTH=1 ENABLE_TEST_MAILBOX=1 NEXT_PUBLIC_ENABLE_TEST_AUTH=1 npx playwright test tests/e2e/invite-flow.spec.ts --project='Desktop Chromium' --workers=1",
    "e2e:invites:signed": "FEATURE_SIGNED_INVITES=1 INVITE_TOKEN_SECRET=playwright-secret HOME=$PWD PLAYWRIGHT_SKIP_WEB_SERVER=1 ENABLE_TEST_AUTH=1 ENABLE_TEST_MAILBOX=1 NEXT_PUBLIC_ENABLE_TEST_AUTH=1 npx playwright test tests/e2e/invite-signed.spec.ts --project='Desktop Chromium' --workers=1",
    "prisma:gen": "prisma generate",
    "prisma:migrate": "prisma migrate dev --create-only -n pass2_schema_sync",
    "backfill:dry-run": "node scripts/backfill-dry-run.mjs",
    "check-env": "node scripts/check-env.mjs",
    "test:e2e": "playwright test",
    "start": "next start --hostname 127.0.0.1 -p 4001",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:seed": "ts-node prisma/seed.ts",
    "postinstall": "prisma generate",
    "prebuild": "prisma generate"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/supabase-js": "^2.45.0",
    "@prisma/client": "^6.18.0",
    "globby": "^15.0.0",
    "lucide-react": "^0.542.0",
    "next": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.65.0",
    "react-quill-new": "^3.6.0",
    "tiktoken": "^1.0.22",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jsdom": "^27.0.0",
    "prisma": "^6.18.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
